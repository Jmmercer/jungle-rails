<section class="admin-catagory-new">

    <header class="page-header">
        <h1>Admin &raquo; New Catagory</h1>
    </header>

    <div class="well">
        <%= link_to 'All Catagories', [:admin, :catagories], class: 'btn btn-info' %>
    </div>

    <div class="row">
        <div class="col-sm-6 col-sm-offset-1">
            <%= form_for [:admin, @catagory] do |form| %>

            <% if form.object.errors.any? %>
            <div class="alert alert-danger">
                <strong>The following errors prevented saving:</strong>
                <ul>
                    <% form.object.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>

            <div class="form-group">
                <%= form.label :name %>
                <%= form.text_area :name, class: 'form-control' %>
            </div>

            <%= form.submit 'Create Catagory', class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>

</section>
